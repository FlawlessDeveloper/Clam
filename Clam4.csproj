<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <PlatformTarget>x64</PlatformTarget>
    <TargetFramework>net46</TargetFramework>
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <Optimize>True</Optimize>
  </PropertyGroup>
  <ItemGroup>
    <EmbeddedResource Include="mandelbrot.ptx" />
    <EmbeddedResource Include="mandelbox.ptx" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ManagedCuda-80" Version="8.0.13" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>
  <Target Name="BuildMandelbox" BeforeTargets="BeforeBuild" Inputs="mandelbrot.cu;mandelbox.cu" Outputs="mandelbrot.ptx;mandelbox.ptx">
    <Exec Command="make" />
  </Target>
</Project>
